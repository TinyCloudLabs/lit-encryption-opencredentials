{
  "name": "lit-encryption-workspace",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --cwd packages/app dev",
    "build": "bun run build:core && bun run build:app",
    "build:core": "bun run --cwd packages/core build",
    "build:app": "bun run --cwd packages/app build",
    "test": "bun test",
    "test:core": "bun run --cwd packages/core test",
    "test:app": "bun run --cwd packages/app test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
